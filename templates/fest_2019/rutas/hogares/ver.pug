extends ../../../base_auth

block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/fest_2019/") FEST 2019
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="/fest_2019/rutas/") Rutas
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="../../") {{ breadcrum_1 | truncatechars:15 }}
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Hogar: {{ breadcrum_active | truncatechars:15 }}
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")



block container_principal
    div(class="container",style="margin-top:20px;margin-bottom:50px;")
        table(class="striped bordered",width="100%")
            thead
                tr
                    th(colspan="4",style="font-size:1.5rem;") Información general del hogar:
            tbody
                tr
                    td(style="font-weight:bold") Primer nombre:
                    td {{ hogar.primer_nombre }}
                    td(style="font-weight:bold") Segundo nombre:
                    td {{ hogar.segundo_nombre }}
                tr
                    td(style="font-weight:bold") Primer apellido:
                    td {{ hogar.primer_apellido }}
                    td(style="font-weight:bold") Segundo apellido:
                    td {{ hogar.segundo_apellido }}
                tr
                    td(style="font-weight:bold") Documento de identidad:
                    td {{ hogar.documento }}
                    td(style="font-weight:bold") Municipio de atención:
                    td {{ hogar.municipio }}

                tr
                    td(style="font-weight:bold") Fecha de nacimiento:
                    td {{ hogar.fecha_nacimiento }}
                    td(style="font-weight:bold") Municipio de residencia:
                    td {{ hogar.municipio_residencia }}

                tr
                    td(style="font-weight:bold") Celular #1:
                    td {{ hogar.celular1 }}
                    td(style="font-weight:bold") Celular #2:
                    td {{ hogar.celular2 }}

                tr
                    td(style="font-weight:bold") Código corregimiento:
                    td {{ hogar.codigo_corregimiento }}
                    td(style="font-weight:bold") Nombre corregimiento:
                    td {{ hogar.nombre_corregimiento }}

                tr
                    td(style="font-weight:bold") Código vereda:
                    td {{ hogar.codigo_vereda }}
                    td(style="font-weight:bold") Nombre vereda:
                    td {{ hogar.nombre_vereda }}

                tr
                    td(style="font-weight:bold") Ubicación:
                    td(colspan="3") {{ hogar.ubicacion }}

                tr
                    td(style="font-weight:bold") Barrio:
                    td {{ hogar.barrio }}
                    td(style="font-weight:bold") Dirección:
                    td {{ hogar.direccion }}

                tr
                    td(style="font-weight:bold") Hecho victimizante:
                    td {{ hogar.hecho_victimizante }}
                    td(style="font-weight:bold") Fecha:
                    td {{ hogar.fecha_hecho_victimizante }}








